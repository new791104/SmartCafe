<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/switch_spinner_place"
        android:layout_width="200px"
        android:layout_marginLeft="10px"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/switch_spinner_isOut"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/switch_spinner_isOut"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/switch_spinner_place"
        android:layout_toEndOf="@+id/switch_spinner_place"
        android:layout_marginLeft="50px"
        android:layout_marginStart="50px" />

</RelativeLayout>
