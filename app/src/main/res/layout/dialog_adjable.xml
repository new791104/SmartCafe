<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="800px"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="100px"
        android:layout_height="50px"
        android:textSize="24dp"
        android:text="coffee:"
        android:id="@+id/dialog_textView_adjType"

        android:layout_below="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/spinner_type"
        android:layout_alignBottom="@+id/dialog_textView_adjType"
        android:layout_toRightOf="@+id/dialog_textView_adjType"
        android:layout_toEndOf="@+id/dialog_textView_adjType" />

    <me.himanshusoni.quantityview.QuantityView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dialog_menu_quantityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:qv_quantity="1"
        android:layout_alignTop="@+id/dialog_textView_quantity"
        android:layout_toRightOf="@+id/dialog_textView_quantity"
        android:layout_toEndOf="@+id/dialog_textView_quantity" />

    <me.himanshusoni.quantityview.QuantityView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dialog_menu_conView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:qv_quantity="3"
        android:layout_alignTop="@+id/dialog_textView_concentration"
        android:layout_alignLeft="@+id/dialog_menu_sugarView"
        android:layout_alignStart="@+id/dialog_menu_sugarView" />

    <me.himanshusoni.quantityview.QuantityView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dialog_menu_sugarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:qv_quantity="3"
        android:layout_below="@+id/dialog_menu_conView"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@+id/dialog_textView_concentration"
        android:layout_toEndOf="@+id/dialog_textView_concentration" />

    <me.himanshusoni.quantityview.QuantityView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dialog_menu_milkView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:qv_quantity="3"
        android:layout_below="@+id/dialog_menu_sugarView"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@+id/dialog_textView_sugar"
        android:layout_toEndOf="@+id/dialog_textView_sugar" />

    <me.himanshusoni.quantityview.QuantityView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dialog_menu_iceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:qv_quantity="3"
        android:layout_below="@+id/dialog_menu_milkView"
        android:layout_marginTop="10px"
        android:layout_alignLeft="@+id/dialog_menu_milkView"
        android:layout_alignStart="@+id/dialog_menu_milkView" />

    <TextView
        android:layout_width="100px"
        android:layout_height="50px"
        android:textSize="24dp"
        android:text="數量:"
        android:id="@+id/dialog_textView_quantity"

        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="100px"
        android:layout_height="50px"
        android:textSize="24dp"
        android:text="濃度:"
        android:id="@+id/dialog_textView_concentration"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toLeftOf="@+id/dialog_menu_quantityView"
        android:layout_toStartOf="@+id/dialog_menu_quantityView" />

    <TextView
        android:layout_width="100px"
        android:layout_height="50px"
        android:textSize="24dp"
        android:text="糖分:"
        android:id="@+id/dialog_textView_sugar"
        android:layout_below="@+id/dialog_textView_concentration"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="100px"
        android:layout_height="50px"
        android:textSize="24dp"
        android:text="奶量:"
        android:id="@+id/dialog_textView_milk"
        android:layout_below="@+id/dialog_textView_sugar"
        android:layout_toLeftOf="@+id/dialog_menu_milkView"
        android:layout_toStartOf="@+id/dialog_menu_milkView" />

    <TextView
        android:layout_width="100px"
        android:layout_height="50px"
        android:textSize="24dp"
        android:text="冰量:"
        android:id="@+id/dialog_textView_ice"
        android:layout_below="@+id/dialog_textView_milk"
        android:layout_alignLeft="@+id/dialog_textView_milk"
        android:layout_alignStart="@+id/dialog_textView_milk" />

    <ImageView
        android:layout_width="100px"
        android:layout_height="20px"
        android:background="#FFFFFF"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="20px"
        android:layout_height="100px"
        android:background="#FFFFFF"
        android:id="@+id/imageView4"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="20px"
        android:layout_height="100px"
        android:background="#FFFFFF"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/spinner_type"
        android:layout_toRightOf="@+id/spinner_type"
        android:layout_toEndOf="@+id/spinner_type"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp" />

    <ImageView
        android:layout_width="20px"
        android:layout_height="100px"
        android:background="#FFFFFF"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/dialog_menu_quantityView"
        android:layout_toEndOf="@+id/dialog_menu_quantityView" />


</RelativeLayout>