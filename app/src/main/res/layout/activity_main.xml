<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ccu.ant.countertable.Activity.MainActivity"
    android:orientation="horizontal"
    android:weightSum="1">

    <android.support.v7.widget.RecyclerView
        android:layout_width="95dp"
        android:layout_height="match_parent"
        android:id="@+id/main_RecyclerView" />

    <!--滑動頁面-->
    <android.support.v4.view.ViewPager
        android:id="@+id/main_FragmentPager"
        android:layout_width="670dp"
        android:layout_height="353dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/main_RecyclerView"
        android:layout_toEndOf="@+id/main_RecyclerView" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/master_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:src="@android:drawable/ic_input_add"
        app:layout_anchor="@+id/item_detail_container"
        app:layout_anchorGravity="top|end"
        android:layout_marginBottom="69px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/delbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:src="@android:drawable/ic_delete"

        app:layout_anchorGravity="top|end"
        android:layout_above="@+id/master_add"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/updatebut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_anchor="@+id/item_detail_container"
        app:layout_anchorGravity="top|end"
        android:layout_above="@+id/delbut"
        android:layout_alignParentRight="true" />



</RelativeLayout>
